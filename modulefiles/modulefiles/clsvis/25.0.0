#%Module1.0#####################################################################
##
## class-visualizer modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tclass-visualizer - Java class structure visualization tool"
        puts stderr "\n\tThis module adds class-visualizer to your environment:"
        puts stderr "\t  - Sets CLSVIS_HOME to $prefix"
        puts stderr "\t  - Adds $prefix to PATH"
        puts stderr "\t  - Provides clsvis.sh command"
        puts stderr "\n\tVersion $version"
        puts stderr "\n\tProject: https://github.com/jonatan-kazmierczak/class-visualizer"
}

module-whatis	"class-visualizer - Java class structure visualization tool"
module-whatis	"Version 25.0.0"
module-whatis	"Category: Development, Analysis Tools"

# for Tcl script use only
set	version		25.0.0
set	prefix		/opt/clsvis/$version

# Set environment variables
setenv  CLSVIS_HOME    $prefix

# Add to PATH
prepend-path    PATH   		$prefix

# Conflict with other class-visualizer versions
conflict clsvis

# Optional: Require Java (uncomment and adjust version as needed)
# prereq java
