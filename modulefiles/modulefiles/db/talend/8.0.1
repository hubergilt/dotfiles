#%Module1.0#####################################################################
##
## talend modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\ttalend - loads the Talend Open Studio environment"
        puts stderr "\n\tThis sets up the environment to run Talend"
        puts stderr "\n\tVersion $version\n"
}

module-whatis	"loads the Talend Open Studio Data Integration 8.0.1 environment"

# for Tcl script use only
set	version		8.0.1
set	prefix		/opt/talend/$version

# Set Talend home
setenv        TALEND_HOME $prefix
prepend-path  PATH        $prefix

# Create alias for easy launching (suppress incubator warnings)
set-alias     talend      "$prefix/TOS_DI-linux-gtk-x86_64 2>&1 | grep -v 'WARNING: Using incubator modules'"

# enable module versioning modulepath
#module use {~/modulefiles/talend/$version}
