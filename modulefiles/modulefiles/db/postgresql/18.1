#%Module1.0
proc ModulesHelp { } {
    puts stderr "PostgreSQL 18.1"
}

module-whatis "PostgreSQL 18.1 database"

conflict postgresql

set pgversion 18
set basedir /usr/lib/postgresql/$pgversion

prepend-path PATH            $basedir/bin
prepend-path LD_LIBRARY_PATH $basedir/lib
prepend-path MANPATH         /usr/share/postgresql/$pgversion/man

setenv PGDATA /var/lib/postgresql/$pgversion/main
setenv PGHOME $basedir
