#%Module1.0#####################################################################
##
## jboss modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tjboss - loads the JBoss EAP environment"
        puts stderr "\n\tThis adds $prefix/* to several of the"
        puts stderr "\tenvironment variables."
        puts stderr "\n\tVersion $version\n"
}

module-whatis	"loads the JBoss EAP 8.1.0 environment"

# for Tcl script use only
set	version		8.1
set	prefix		/opt/jboss/$version

# JBoss requires Java
if { ![is-loaded java] } {
    module load java/25.0.1
}

setenv        JBOSS_HOME $prefix
prepend-path  PATH       $prefix/bin

# Create aliases for easy management
set-alias     jboss-start      "$prefix/bin/standalone.sh"
set-alias     jboss-start-bg   "$prefix/bin/standalone.sh > /dev/null 2>&1 &"
set-alias     jboss-stop       "$prefix/bin/jboss-cli.sh --connect command=:shutdown"
set-alias     jboss-domain     "$prefix/bin/domain.sh"
set-alias     jboss-cli        "$prefix/bin/jboss-cli.sh"
set-alias     jboss-logs       "tail -f $prefix/standalone/log/server.log"

# enable module versioning modulepath
#module use {~/modulefiles/jboss/$version}
