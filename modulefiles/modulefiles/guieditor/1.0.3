#%Module1.0#####################################################################
##
## guieditor modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tguieditor - loads the guiEditor environment"
        puts stderr "\n\tThis sets up the environment to run guiEditor"
        puts stderr "\n\tVersion $version\n"
}

module-whatis	"loads the guiEditor 1.0.3 environment"

# for Tcl script use only
set	version		1.0.3
set	prefix		/opt/guieditor/$version

# Set guiEditor home
setenv        GUIEDITOR_HOME $prefix
prepend-path  PATH           $prefix

# Create alias for easy launching
set-alias     guieditor      "$prefix/guiEditor"

